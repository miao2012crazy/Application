<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="114dp">

    <LinearLayout
        android:layout_width="1024dp"
        android:layout_height="114dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_ad_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:src="@drawable/icon_ad_message" />

            <ViewFlipper
                android:id="@+id/up_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:autoStart="true"
                android:flipInterval="3000"
                android:gravity="center_vertical"
                android:inAnimation="@anim/anim_in"
                android:outAnimation="@anim/anim_out"
                android:text="广告条"
                android:textColor="#e4e4e4"
                android:textSize="20sp" />

        </LinearLayout>
        <ImageView
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_10"
            android:src="@drawable/android"
            android:id="@+id/iv_mobile_app_android"
            android:textSize="20sp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#fff" />
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ios"
            android:id="@+id/iv_mobile_app_ios"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:text="@string/android_n_app"
           />

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="未登录"
            android:textColor="#888888"
            android:textSize="20sp" />
    </LinearLayout>




</RelativeLayout>