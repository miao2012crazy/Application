<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login_raduio"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_perfect_info" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bg_successed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="手机验证"
                    android:textColor="#e9e9e9"
                    android:textSize="23sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_perfect_img"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/perfect_info" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="完善信息"
                    android:textSize="23sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_regedit_success_img"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/regedit_success" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="完成注册"
                    android:textColor="#e9e9e9"
                    android:textSize="23sp" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
    <!--底部输入-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/ll_perfect_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_user_header"
                android:background="@drawable/bg_head_default"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="224dp"
                android:layout_height="224dp" />
            <EditText
                android:id="@+id/et_user_psd"
                android:layout_width="800dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_focus"
                android:drawablePadding="10dp"
                android:hint="请设置密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:textColor="#fefefe"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="34sp" />

            <TextView
                android:layout_width="800dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="密码的长度为6-12个字符，数字、字母均可"
                android:textColor="#fefefe"
                android:textSize="22sp" />

            <EditText
                android:maxLength="12"
                android:id="@+id/et_concert_psd"
                android:layout_width="800dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_focus"
                android:drawablePadding="10dp"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:textColor="#fefefe"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="34sp" />

            <EditText
                android:maxLength="10"
                android:id="@+id/user_nickname"
                android:layout_width="800dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/selector_focus"
                android:drawablePadding="10dp"
                android:hint="昵称"
                android:textColor="#fefefe"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="34sp" />

            <TextView
                android:layout_width="800dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:text="昵称的长度为2-10个字符"
                android:textColor="#fefefe"
                android:textSize="22sp" />

            <EditText
                android:inputType="number"
                android:id="@+id/et_user_age"
                android:layout_width="800dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_focus"
                android:drawablePadding="10dp"
                android:hint="年龄"
                android:textColor="#fefefe"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="34sp" />
            <EditText
                android:visibility="gone"
                android:layout_marginTop="30dp"
                android:id="@+id/et_user_recommender"
                android:layout_width="800dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:background="@drawable/selector_focus"
                android:drawablePadding="10dp"
                android:hint="推荐人(没有可不填)"
                android:textColor="#fefefe"
                android:textCursorDrawable="@drawable/text_cursor_cyan"
                android:textSize="34sp" />

            <RadioGroup
                android:id="@+id/rg_group"
                android:layout_width="800dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_girl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/radiobutton_selector"
                    android:drawablePadding="10dp"
                    android:text="女"
                    android:textColor="#fefefe"
                    android:textSize="36sp" />

                <RadioButton
                    android:id="@+id/rb_boy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:drawableLeft="@drawable/radiobutton_selector"
                    android:drawablePadding="10dp"
                    android:text="男"
                    android:textColor="#fefefe"
                    android:textSize="36sp" />


            </RadioGroup>

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="600dp"
                android:layout_height="76dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/selector_btn_login"
                android:text="提 交"
                android:textColor="#fff"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_regedit_auto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:text="恭喜您注册成功！"
                android:textColor="#333"
                android:textSize="40sp" />

            <Button
                android:id="@+id/btn_regedit_success"
                android:layout_width="600dp"
                android:layout_height="76dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/selector_btn_login"
                android:text="自动登录"
                android:textColor="#fff"
                android:textSize="30sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
