<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_image_check"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        style="@style/ll_skup_style"
        android:layout_marginRight="5dp"
        android:layout_weight="504"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center"
                android:text="皮肤分类"
                android:textColor="#999"
                android:textSize="30sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_skin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"/>
            <!--<ListView
                android:id="@+id/skup_list_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:divider="@null" />-->
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_radius_skup"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:gravity="center"
                android:text="皮肤详情"
                android:textColor="#999"
                android:textSize="30sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_radius_skup_scrollview"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_skin_item_detail"
                        android:layout_width="349dp"
                        android:layout_height="268dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:rotation="90"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/tv_skin_detail_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#999"
                        android:textSize="24sp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/dp_10"
        style="@style/ll_skup_style"
        android:layout_marginLeft="5dp"
        android:layout_weight="450"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:gravity="center"
            android:text="皮肤状况"
            android:textColor="#999"
            android:textSize="30sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="450dp"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextureView
                android:id="@+id/surfaceView_skup"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
              />
            <ImageView
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_skin_camera"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
              />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="#313131"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_camera"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginRight="34dp"
                    android:background="@drawable/selector_camera_state"
                    android:text="重新拍照"
                    android:textColor="#999"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/selector_camera_state"
                    android:text="保存照片"
                    android:textColor="#999"
                    android:textSize="24sp" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_capture"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="#313131">
                <Button
                    android:layout_centerInParent="true"
                    android:id="@+id/still_button"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:layout_marginRight="34dp"
                    android:background="@drawable/selector_camera_state"
                    android:text="拍照"
                    android:textColor="#999"
                    android:textSize="24sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>