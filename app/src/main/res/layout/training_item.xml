<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_training"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:layout_marginBottom="14dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="184dp"
                android:layout_height="128dp"
                android:layout_marginLeft="24dp">

                <ImageView
                    android:id="@+id/iv_video_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                     />

                <ImageView
                    android:id="@+id/iv_start_video"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_start" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="600dp"
                android:layout_height="128dp"
                android:layout_marginLeft="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_shopping_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="测试数据"
                        android:textColor="#444"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/tv_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="测试数据"
                        android:textColor="#666"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_video_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="来源：视频来源"
                        android:textColor="#444"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_shopping_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="时间：2017 年 8 月 12 日"
                        android:textColor="#444"
                        android:textSize="20sp" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >
                <ImageView
                    android:layout_marginBottom="45dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_video_1"
                    android:id="@+id/iv_video_start"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />
                <ImageView
                    android:layout_marginBottom="45dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_video_stop"
                    android:id="@+id/iv_video_stop"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
