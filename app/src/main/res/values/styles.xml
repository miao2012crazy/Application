<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
    <!-- android:button="@null"-->

    <!--自定义rb样式-->
    <style name="custom_rb_style" >
        <item name="android:button">@null</item>
        <item name="android:textColor">#666</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:textSize">32sp</item>
       <!-- <item name="android:background">@drawable/selector_radio_button_2</item>-->
    </style>

    <!--主页面底部导航容器style-->
    <style name="main_home_ll_style">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--主页面底部导航图片style-->
    <style name="main_home_iv_style">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>
    <!--主页面底部导航文字style-->
    <style name="main_home_tv_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#d6d4d4</item>
    </style>
    <!--发型管理 底部radiobutton-->
    <style name="head_style">
        <item name="android:textColor">@drawable/selector_head_text_color</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TabLayoutDetailTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">24sp</item>
    </style>
    <!-- 皮肤头皮页面底部tab导航条 -->
    <style name="tab_select" parent="android:Widget">

    </style>

    <style name="ll_skup_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_radius</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>
    <style name="TabDetailTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="product_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|left</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/product_444</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="pruduct_style_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_666</item>
    </style>

    <style name="dialog_login" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_dialog_bg</item>
    </style>
    <style name="dialog_notice" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_dialog_notice_bg</item>
    </style>

    <!--progressbar-->
    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <!--dialog动画-->
    <style name="dialog_animaction">
   <!--     <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>-->
    </style>

    <!-- ToastMiui【仿小米带有动画的Toast】进入动画和退出动画的引用 -->
    <style name="anim_view">
       <!-- <item name="@android:windowEnterAnimation">@anim/toast_anim_in</item>
        <item name="@android:windowExitAnimation">@anim/toast_anim_out</item>-->
    </style>
</resources>
